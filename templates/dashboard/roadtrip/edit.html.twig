{% extends 'base.html.twig' %}

{% block title %}Modifier un Road Trip{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-image: url('https://images.unsplash.com/photo-1506929562872-bb421503ef21?q=80&w=2755&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');
            background-size: cover;
            background-position: center;
            background-filter: blur(5px);
        }

        .form-container {
            background-color: #ffffff;
            border-radius: 20px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            padding: 30px;
            max-width: 600px;
            width: 100%;
            margin-top: 3%;
            margin-bottom: 3%;
        }

        .btn-primary {
            background-color: #DF6951;
            border-color: #DF6951;
        }

        .btn-primary:hover {
            background-color: #c85a44;
            border-color: #c85a44;
        }

        .form-control:focus {
            border-color: #DF6951;
            box-shadow: 0 0 0 0.2rem rgba(223, 105, 81, 0.25);
        }

        .text-primary {
            color: #DF6951 !important;
        }

        .image-preview {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            background-size: cover;
            background-position: center;
            margin: 10px auto;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 40px;
            color: #DF6951;
            background-color: #f8f9fa;
            border: 2px dashed #DF6951;
        }

        .image-gallery {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

        .image-gallery img {
            width: 120px;
            height: 120px;
            object-fit: cover;
            border-radius: 10px;
        }

        .form-label {
            font-weight: 600;
        }

        .form-control, .form-select {
            margin-bottom: 1rem;
        }

        .row {
            margin-bottom: 1rem;
        }

    </style>
{% endblock %}

{% block body %}
    <div class="container-fluid d-flex align-items-center justify-content-center min-vh-100">
        <div class="form-container">
            <h2 class="fw-bold mb-4 text-primary text-center">Modifier un Road Trip</h2>

            {{ form_start(form, { 'enctype': 'multipart/form-data' }) }}

            <input type="hidden" name="referer" value="{{ referer }}">

            <div class="mb-3">
                {{ form_label(form.titre, 'Nom du Road Trip', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="row">
                <div class="col-md-6">
                    {{ form_label(form.depart_address, 'Adresse de D√©part', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.depart_address, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="col-md-6">
                    {{ form_label(form.arrive_address, 'Adresse d\'Arriv√©e', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.arrive_address, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="mb-3">
                {{ form_label(form.depart_date, 'Date de D√©part', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.depart_date, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.arriver_date, 'Date d\'Arriv√©e', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.arriver_date, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.image, 'Image Principale', {'label_attr': {'class': 'form-label'}}) }}
                <div class="image-preview" id="imagePreview">üì∑</div>
                {{ form_widget(form.image, {'attr': {'class': 'form-control', 'onchange': 'previewImage(this);'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.description_supplementaire, 'Description Suppl√©mentaire', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.description_supplementaire, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.image_supplementaire, 'Photos Suppl√©mentaires', {'label_attr': {'class': 'form-label'}}) }}
                <div class="image-gallery" id="imageGallery"></div>
                {{ form_widget(form.image_supplementaire, {'attr': {'class': 'form-control', 'multiple': true, 'onchange': 'previewExtraImages(this);'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.vehicle, 'Choix du V√©hicule', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.vehicle, {'attr': {'class': 'form-select'}}) }}
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a href="{{ referer }}" class="btn btn-secondary">Retour</a>
                <button type="submit" class="btn btn-primary">Mettre √† jour</button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function previewImage(input) {
            const preview = document.getElementById('imagePreview');
            const file = input.files[0];
            const reader = new FileReader();

            reader.onloadend = function () {
                preview.style.backgroundImage = `url(${reader.result})`;
                preview.innerHTML = '';
            };

            if (file) {
                reader.readAsDataURL(file);
            } else {
                preview.style.backgroundImage = '';
                preview.innerHTML = 'üì∑';
            }
        }

        function previewExtraImages(input) {
            const previewContainer = document.getElementById('imageGallery');
            previewContainer.innerHTML = '';
            const files = input.files;

            Array.from(files).forEach(file => {
                const reader = new FileReader();

                reader.onloadend = function () {
                    const img = document.createElement('img');
                    img.src = reader.result;
                    previewContainer.appendChild(img);
                };

                if (file) {
                    reader.readAsDataURL(file);
                }
            });
        }
    </script>
{% endblock %}
