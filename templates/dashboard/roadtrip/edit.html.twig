{% extends 'base.html.twig' %}

{% block title %}Modifier un Road Trip{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-image: url('https://images.unsplash.com/photo-1506929562872-bb421503ef21?q=80&w=2755&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fA%3D%3D');
            background-size: cover;
            background-position: center;
        }

        .form-container {
            background-color: #ffffff;
            border-radius: 20px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            padding: 30px;
            max-width: 600px;
            width: 100%;
            margin-top: 5%;
            margin-bottom: 5%;
        }

        .btn-primary {
            background-color: #DF6951;
            border-color: #DF6951;
        }

        .btn-primary:hover {
            background-color: #c85a44;
        }

        .page-title {
            color: #DF6951;
            font-weight: bold;
            text-align: center;
            margin-bottom: 20px;
        }

        .image-preview {
            width: 120px;
            height: 120px;
            background-size: cover;
            background-position: center;
            margin: 10px auto;
            border: 2px dashed #DF6951;
            border-radius: 10px;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 40px;
            color: #DF6951;
            background-color: #f8f9fa;
            position: relative;
        }

        .image-gallery {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

        .image-gallery img {
            width: 120px;
            height: 120px;
            object-fit: cover;
            border-radius: 10px;
        }

        /* Stylisation du bouton Public/Priv√© */
        .toggle-public {
            display: flex;
            align-items: center;
            gap: 10px;
            cursor: pointer;
            font-weight: 600;
            padding: 10px 15px;
            border-radius: 50px;
            background-color: #f8f9fa;
            border: 2px solid #DF6951;
            color: #DF6951;
            transition: 0.3s ease;
            text-align: center;
            justify-content: center;
            width: 100%;
        }

        .toggle-public:hover {
            background-color: #DF6951;
            color: white;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container d-flex align-items-center justify-content-center min-vh-100">
        <div class="form-container">
            <h2 class="page-title">Modifier un Road Trip</h2>

            {% if form_errors(form) %}
                <div class="alert alert-danger">
                    {{ form_errors(form) }}
                </div>
            {% endif %}

            {{ form_start(form, {'enctype': 'multipart/form-data'}) }}

            <!-- Nom du Road Trip -->
            <div class="mb-3">
                {{ form_label(form.titre, 'Nom du Road Trip', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.titre) }}
            </div>

            <!-- Description -->
            <div class="mb-3">
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.description) }}
            </div>

            <!-- Dates -->
            <div class="row">
                <div class="col-md-6 mb-3">
                    {{ form_label(form.depart_date, 'Date de D√©part', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.depart_date, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.depart_date) }}
                </div>
                <div class="col-md-6 mb-3">
                    {{ form_label(form.arriver_date, 'Date d\'Arriv√©e', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.arriver_date, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.arriver_date) }}
                </div>
            </div>

            <!-- Adresse D√©part & Arriv√©e -->
            <div class="row">
                <div class="col-md-6 mb-3">
                    {{ form_label(form.depart_address, 'Adresse de D√©part', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.depart_address, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.depart_address) }}
                </div>
                <div class="col-md-6 mb-3">
                    {{ form_label(form.arrive_address, 'Adresse d\'Arriv√©e', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.arrive_address, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.arrive_address) }}
                </div>
            </div>

            <!-- Image principale -->
            <div class="mb-3">
                <h6 class="form-label">Image Principale</h6>
                {% set imagePrincipale = roadTrip.image ? asset(roadTrip.image) : asset('uploads/default.jpg') %}
                <div class="image-preview" id="imagePreview" style="background-image: url('{{ imagePrincipale }}')">üì∑</div>
                {{ form_widget(form.imagePrincipale, {'attr': {'class': 'form-control', 'onchange': 'previewImage(this)'}}) }}
            </div>

            <!-- Images Suppl√©mentaires -->
            <div class="mb-3">
                <h6 class="form-label">Photos Suppl√©mentaires</h6>
                <div class="image-gallery" id="imageGallery">
                    {% for media in roadTrip.medias %}
                        <div class="image-container">
                            {% set mediaImage = media.filePath is not null ? asset(media.filePath) : asset('uploads/default.jpg') %}
                            <img src="{{ mediaImage }}" alt="Image">
                        </div>
                    {% endfor %}
                </div>
                {{ form_widget(form.extraImages, {'attr': {'class': 'form-control', 'multiple': true, 'accept': 'image/*', 'onchange': 'previewExtraImages(this)'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.description_supplementaire, 'Description Suppl√©mentaire', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.description_supplementaire, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.vehicle, 'Choix du V√©hicule', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.vehicle, {'attr': {'class': 'form-select'}}) }}
            </div>
            <div class="mb-3">
                <label class="toggle-public">
                    {{ form_widget(form.isPublic) }}
                    <span>Rendre ce road trip public</span>
                </label>
            </div>

            <div class="d-flex justify-content-between">
                <a href="{{ path('app_journal') }}" class="btn btn-secondary">Retour</a>
                <button type="submit" class="btn btn-primary">Mettre √† jour</button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function previewImage(input) {
            const preview = document.getElementById('imagePreview');
            const file = input.files[0];
            const reader = new FileReader();

            reader.onloadend = function () {
                preview.style.backgroundImage = `url('${reader.result}')`;
                preview.innerHTML = '';
            };

            if (file) {
                reader.readAsDataURL(file);
            }
        }
    </script>
{% endblock %}
