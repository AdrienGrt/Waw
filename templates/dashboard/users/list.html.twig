{% extends 'base.html.twig' %}

{% block title %}Gestion des utilisateurs{% endblock %}

{% block body %}
<h1>Gestion des utilisateurs</h1>

<!-- Buttons for navigating to other sections of the dashboard -->


<!-- Table for managing users -->
<table class="table mt-4">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nom d'utilisateur</th>
            <th>Email</th>
            <th>Rôles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles|join(', ') }}</td>
                <td>
                    <a href="{{ path('app_dashboard_user_edit', { id: user.id }) }}" class="btn btn-primary btn-sm">Modifier</a>
                    <form action="{{ path('app_dashboard_user_delete', { id: user.id }) }}" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm" 
                            onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');">
                            Supprimer
                        </button>
                    </form>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<div class="text-center mt-4">
    <a href="{{ path('app_dashboard_roadtrip_create') }}" class="btn btn-primary">Créer un nouveau Road Trip</a>
    <a href="{{ path('app_dashboard_roadtrip_list') }}" class="btn btn-info">Liste des Road Trips</a>
    <a href="{{ path('app_dashboard_users') }}" class="btn btn-success">Liste des Utilisateurs</a>
    <a href="{{ path('app_dashboard') }}" class="btn btn-secondary">Retour au Dashboard</a>
</div>
{% endblock %}
