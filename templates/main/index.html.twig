{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Poppins', sans-serif;
    }
    .hero-section {
        background-image: url('https://images.unsplash.com/photo-1500964757637-c85e8a162699?w=800&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Nnx8bGFuZHNjYXBlfGVufDB8fDB8fHww');
        background-size: cover;
        background-position: center;
        padding: 100px 0;
        color: #fff;
        text-align: center;
    }
    .hero-text h1 {
        font-size: 3.5rem;
        font-weight: 700;
        margin-bottom: 20px;
    }
    .text-primary {
        color: #D66A50 !important;
    }
    .btn-primary {
        background-color: #D66A50;
        border-color: #D66A50;
    }
    .btn-primary:hover {
        background-color: #c15a42;
        border-color: #c15a42;
    }
    .road-trip-section {
        padding: 80px 0;
        background-color: #fff;
    }
    .features-section {
        padding: 80px 0;
        background-color: #F5F5DC;
    }
    .card {
        border: none;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
    }
    .card:hover {
        transform: translateY(-5px);
    }
    .icon-box {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 20px;
        font-size: 24px;
    }
    .cta-section {
        background-color: #D66A50;
        padding: 60px 0;
        color: #fff;
    }
</style>

<!-- Hero Section -->
<div class="hero-section">
    <div class="container">
        <h1>Partagez vos <span class="text-primary">expériences</span> inoubliables</h1>
        <p class="lead mb-4">Explorez, Partagez, Vivez vos rêves sur la route.</p>
        <a href="#" class="btn btn-primary btn-lg">Commencez l'aventure</a>
    </div>
</div>

<!-- Road Trip Section -->
<div class="road-trip-section">
    <div class="container">
        <h2 class="text-center mb-5">Top Road Trips</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="https://images.unsplash.com/photo-1535077531369-640f854994e8?w=800&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTJ8fHJvYWR0cmlwfGVufDB8fDB8fHww" alt="Road Trip" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">France-Italie</h5>
                        <p class="card-text">Durée : 6 jours</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="https://images.unsplash.com/photo-1535077531369-640f854994e8?w=800&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTJ8fHJvYWR0cmlwfGVufDB8fDB8fHww" alt="Road Trip" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">Espagne-Portugal</h5>
                        <p class="card-text">Durée : 8 jours</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="https://images.unsplash.com/photo-1541262219680-541c15f59e15?w=800&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTh8fHJvYWR0cmlwfGVufDB8fDB8fHww" alt="Road Trip" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">Allemagne-Autriche</h5>
                        <p class="card-text">Durée : 7 jours</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="features-section">
    <div class="container">
        <h2 class="text-center mb-5">Partagez Vos Road Trips <span class="text-primary">Facilement</span></h2>
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="d-flex mb-5">
                    <div class="icon-box" style="background-color: #D66A50; color: white;">
                        <i class="fas fa-user-plus"></i>
                    </div>
                    <div>
                        <h5>Inscrivez-vous</h5>
                        <p>Créez votre compte en quelques clics et commencez votre aventure.</p>
                    </div>
                </div>
                <div class="d-flex mb-5">
                    <div class="icon-box" style="background-color: #D66A50; color: white;">
                        <i class="fas fa-book"></i>
                    </div>
                    <div>
                        <h5>Remplissez votre carnet</h5>
                        <p>Ajoutez vos voyages, photos et expériences uniques.</p>
                    </div>
                </div>
                <div class="d-flex">
                    <div class="icon-box" style="background-color: #D66A50; color: white;">
                        <i class="fas fa-share-alt"></i>
                    </div>
                    <div>
                        <h5>Partagez avec vos proches</h5>
                        <p>Invitez famille et amis à découvrir vos aventures.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <img src="https://images.unsplash.com/photo-1534103076216-0de55b38e52d?w=800&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MzB8fHJvYWR0cmlwfGVufDB8fDB8fHww" alt="Road Trip" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">Berlin-Vienne</h5>
                        <p class="card-text">Durée : 28 jours</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Call to Action Section -->
<div class="cta-section text-center">
    <div class="container">
        <h2 class="mb-4">Prêt à commencer votre aventure ?</h2>
        <a href="#" class="btn btn-light btn-lg">S'INSCRIRE MAINTENANT</a>
    </div>
</div>
{% endblock %}
