{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Poppins', sans-serif;
    }

    /* HERO SECTION */
    .hero-section {
        background-image: url('https://images.unsplash.com/photo-1516483638261-f4dbaf036963?q=80&w=2675&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');
        background-size: cover;
        background-position: center;
        position: relative;
        padding: 120px 0;
        color: #fff;
        text-align: center;
        overflow: hidden;
    }

    .hero-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5); /* Superposition sombre */
        z-index: 1;
    }

    .hero-text {
        position: relative;
        z-index: 2; /* Pour être au-dessus de la superposition sombre */
    }

    .hero-text h1 {
        font-size: 4rem;
        font-weight: 700;
        margin-bottom: 20px;
        animation: fadeInUp 1.5s ease-out;
    }

    .hero-text p {
        font-size: 1.25rem;
        margin-bottom: 30px;
        animation: fadeInUp 2s ease-out;
        animation-delay: 0.5s;
    }

    .btn-primary {
        background-color: #D66A50;
        border-color: #D66A50;
        padding: 12px 30px;
        font-size: 1.2rem;
        border-radius: 50px;
        box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15);
        transition: 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #c15a42;
        border-color: #c15a42;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
    }

    .text-primary {
        color: #D66A50 !important;
    }

    /* Road Trip Section */
    .road-trip-section {
        padding: 80px 0;
        background-color: #fff;
    }

    .card {
        border: none;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
        border-radius: 15px;
        overflow: hidden;
    }

    .card:hover {
        transform: translateY(-10px);
    }

    .card-img-top {
        height: 200px;
        object-fit: cover;
    }

    .card-body {
        padding: 1.5rem;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 0.75rem;
    }

    .btn-view {
        background-color: #D66A50;
        color: white;
        border: none;
        width: 100%;
        padding: 10px 15px;
        text-align: center;
        border-radius: 50px;
        transition: background-color 0.3s ease;
    }

    .btn-view:hover {
        background-color: #c15a42;
        color: #fff;
    }

    /* Features Section */
    .features-section {
        padding: 80px 0;
        background-color: #f1f1f1;
        background-image: url('{{ asset('uploads/path/to/your/photo.jpg') }}');
        background-size: cover;
        background-position: center;
    }

    .features-section .container {
        background-color: rgba(255, 255, 255, 0.7);
        padding: 40px;
        border-radius: 8px;
    }

    .icon-box {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 20px;
        font-size: 24px;
        background-color: #D66A50;
        color: white;
    }

    .cta-section {
        background-color: #D66A50;
        padding: 20px 0;
        color: #fff;
        text-align: center;
    }
</style>
{% endblock %}

{% block body %}
<!-- Hero Section -->
<div class="hero-section">
    <div class="container hero-text">
        <h1>Partagez vos <span class="text-primary">expériences</span> inoubliables</h1>
        <p class="lead mb-4">Explorez, Partagez, Vivez vos rêves sur la route. Rejoignez la communauté de passionnés et découvrez des road trips exceptionnels.</p>
        <a href="#" class="btn btn-primary btn-lg">Commencez l'aventure</a>
    </div>
</div>

<!-- Road Trip Section -->
<div class="road-trip-section">
    <div class="container">
        <h2 class="text-center mb-5">Top Road Trips</h2>
        <div class="row">
            {% for roadTrip in roadTrips %}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="{{ roadTrip.image ? asset('uploads/' ~ roadTrip.image) : asset('uploads/pt.jpg') }}" alt="{{ roadTrip.titre }}" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title">{{ roadTrip.titre }}</h5>
                            <p class="card-text">Durée : {{ roadTrip.getDuree() ?? 'Non spécifiée' }} jours</p>
                            <p class="card-text">Véhicule : {{ roadTrip.vehicle.type ?? 'Non spécifié' }}</p>
                            <a href="{{ path('app_dashboard_roadtrip_view', { id: roadTrip.id }) }}" class="btn btn-view">Voir le Road Trip</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <p class="text-center">Aucun road trip disponible pour le moment.</p>
            {% endfor %}
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="features-section">
    <div class="container">
        <h2 class="text-center mb-5">Partagez Vos Road Trips <span class="text-primary">Facilement</span></h2>
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="d-flex mb-5">
                    <div class="icon-box">
                        <i class="fas fa-user-plus"></i>
                    </div>
                    <div>
                        <h5>Inscrivez-vous</h5>
                        <p>Créez votre compte en quelques clics et commencez votre aventure.</p>
                    </div>
                </div>
                <div class="d-flex mb-5">
                    <div class="icon-box">
                        <i class="fas fa-book"></i>
                    </div>
                    <div>
                        <h5>Remplissez votre carnet</h5>
                        <p>Ajoutez vos voyages, photos et expériences uniques.</p>
                    </div>
                </div>
                <div class="d-flex">
                    <div class="icon-box">
                        <i class="fas fa-share-alt"></i>
                    </div>
                    <div>
                        <h5>Partagez avec vos proches</h5>
                        <p>Invitez famille et amis à découvrir vos aventures.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                {% if roadTrips is not empty %}
                    <div class="card">
                        <img src="{{ roadTrips[0].image ? asset('uploads/' ~ roadTrips[0].image) : asset('uploads/pt.jpg') }}" alt="{{ roadTrips[0].titre }}" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title">{{ roadTrips[0].titre }}</h5>
                            <p class="card-text">Durée : {{ roadTrips[0].getDuree() ?? 'Non spécifiée' }} jours</p>
                        </div>
                    </div>
                {% else %}
                    <p class="text-center">Aucun road trip disponible pour le moment.</p>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<!-- Call to Action Section -->
<div class="cta-section">
    <div class="container">
        <h2 class="mb-4">Prêt à commencer votre aventure ?</h2>
        <a href="{{ path('app_register') }}" class="btn btn-light btn-lg">S'INSCRIRE MAINTENANT</a>
    </div>
</div>
{% endblock %}
