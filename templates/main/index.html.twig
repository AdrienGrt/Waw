{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Poppins', sans-serif;
    }

    /* HERO SECTION - Style modernisé sans voile noir */
    .hero-section {
        background-image: url('https://images.unsplash.com/photo-1500964757637-c85e8a162699?w=800&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Nnx8bGFuZHNjYXBlfGVufDB8fDB8fHww');
        background-size: cover;
        background-position: center;
        position: relative;
        padding: 120px 0;
        color: #fff;
        text-align: center;
        overflow: hidden;
    }

    .hero-text h1 {
        font-size: 4rem;
        font-weight: 700;
        margin-bottom: 20px;
        animation: fadeInUp 1.5s ease-out;
        z-index: 1;
    }

    .hero-text p {
        font-size: 1.25rem;
        margin-bottom: 30px;
        animation: fadeInUp 2s ease-out;
        animation-delay: 0.5s;
        z-index: 1;
    }

    .btn-primary {
        background-color: #D66A50;
        border-color: #D66A50;
        padding: 12px 30px;
        font-size: 1.2rem;
        border-radius: 50px;
        box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15);
        transition: 0.3s ease;
        z-index: 1;
    }

    .btn-primary:hover {
        background-color: #c15a42;
        border-color: #c15a42;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
    }

    @keyframes fadeInUp {
        0% {
            opacity: 0;
            transform: translateY(30px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes fadeIn {
        0% {
            opacity: 0;
        }
        100% {
            opacity: 1;
        }
    }

    /* Road Trip Section */
    .road-trip-section {
        padding: 80px 0;
        background-color: #fff;
    }

    .card {
        border: none;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        border-radius: 8px;
        opacity: 0;
        animation: fadeInUp 1s ease-out forwards;
    }

    .card:hover {
        transform: translateY(-5px);
    }

    .card img {
        height: 200px;
        object-fit: cover;
        border-radius: 4px 4px 0 0;
    }

    .btn-view {
        margin-top: 10px;
        background-color: #4299e1;
        color: white;
        border: none;
        padding: 10px 15px;
        text-align: center;
        border-radius: 4px;
        display: inline-block;
    }

    .btn-view:hover {
        background-color: #2b6cb0;
        color: #fff;
    }

    /* Features Section */
    .features-section {
        padding: 80px 0;
        background-color: #f1f1f1;
        background-image: url('{{ asset('uploads/path/to/your/photo.jpg') }}');
        background-size: cover;
        background-position: center;
    }

    .features-section .container {
        background-color: rgba(255, 255, 255, 0.7);
        padding: 40px;
        border-radius: 8px;
    }

    .icon-box {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 20px;
        font-size: 24px;
        opacity: 0;
        animation: fadeIn 1s ease-out forwards;
    }

    .cta-section {
        background-color: #D66A50;
        padding: 20px 0;
        color: #fff;
        text-align: center;
    }

    /* Delay animation for multiple icons in features */
    .features-section .icon-box:nth-child(1) {
        animation-delay: 0.5s;
    }
    .features-section .icon-box:nth-child(2) {
        animation-delay: 1s;
    }
    .features-section .icon-box:nth-child(3) {
        animation-delay: 1.5s;
    }
</style>
{% endblock %}

{% block body %}
<!-- Hero Section -->
<div class="hero-section">
    <div class="container hero-text">
        <h1>Partagez vos <span class="text-primary" style="color: #F2A900;">expériences</span> inoubliables</h1>
        <p class="lead mb-4">Explorez, Partagez, Vivez vos rêves sur la route. Rejoignez la communauté de passionnés et découvrez des road trips exceptionnels.</p>
        <a href="#" class="btn btn-primary btn-lg">Commencez l'aventure</a>
    </div>
</div>

<!-- Road Trip Section -->
<div class="road-trip-section">
    <div class="container">
        <h2 class="text-center mb-5">Top Road Trips</h2>
        <div class="row">
            {% for roadTrip in roadTrips %}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <!-- Image du Road Trip -->
                        <img src="{{ roadTrip.image ? asset('uploads/' ~ roadTrip.image) : asset('uploads/pt.jpg') }}" alt="{{ roadTrip.titre }}" class="card-img-top">

                        <div class="card-body">
                            <!-- Titre et détails -->
                            <h5 class="card-title">{{ roadTrip.titre }}</h5>
                            <p class="card-text">Durée : {{ roadTrip.getDuree() ?? 'Non spécifiée' }} jours</p>
                            <p class="card-text">Véhicule : {{ roadTrip.vehicle.type ?? 'Non spécifié' }}</p>

                            <!-- Bouton Voir le Road Trip -->
                            <a href="{{ path('app_dashboard_roadtrip_view', { id: roadTrip.id }) }}" class="btn btn-view">Voir le Road Trip</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <p class="text-center">Aucun road trip disponible pour le moment.</p>
            {% endfor %}
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="features-section">
    <div class="container">
        <h2 class="text-center mb-5">Partagez Vos Road Trips <span class="text-primary">Facilement</span></h2>
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="d-flex mb-5">
                    <div class="icon-box" style="background-color: #D66A50; color: white;">
                        <i class="fas fa-user-plus"></i>
                    </div>
                    <div>
                        <h5>Inscrivez-vous</h5>
                        <p>Créez votre compte en quelques clics et commencez votre aventure.</p>
                    </div>
                </div>
                <div class="d-flex mb-5">
                    <div class="icon-box" style="background-color: #D66A50; color: white;">
                        <i class="fas fa-book"></i>
                    </div>
                    <div>
                        <h5>Remplissez votre carnet</h5>
                        <p>Ajoutez vos voyages, photos et expériences uniques.</p>
                    </div>
                </div>
                <div class="d-flex">
                    <div class="icon-box" style="background-color: #D66A50; color: white;">
                        <i class="fas fa-share-alt"></i>
                    </div>
                    <div>
                        <h5>Partagez avec vos proches</h5>
                        <p>Invitez famille et amis à découvrir vos aventures.</p>
                    </div>
                </div>
            </div>

            <!-- Road Trip Dynamique - Premier RoadTrip -->
            <div class="col-md-6">
                {% if roadTrips is not empty %}
                    <div class="card">
                        <img src="{{ roadTrips[0].image ? asset('uploads/' ~ roadTrips[0].image) : asset('uploads/pt.jpg') }}" alt="{{ roadTrips[0].titre }}" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title">{{ roadTrips[0].titre }}</h5>
                            <p class="card-text">Durée : {{ roadTrips[0].getDuree() ?? 'Non spécifiée' }} jours</p>
                        </div>
                    </div>
                {% else %}
                    <p class="text-center">Aucun road trip disponible pour le moment.</p>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<!-- Call to Action Section (sans animation) -->
<div class="cta-section">
    <div class="container">
        <h2 class="mb-4">Prêt à commencer votre aventure ?</h2>
        <a href="{{ path('app_register') }}" class="btn btn-light btn-lg">S'INSCRIRE MAINTENANT</a>
    </div>
</div>
{% endblock %}
